<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ona.App.Features.Calendar.DateView">
    <Grid
		RowSpacing="0" ColumnSpacing="0" Margin="0" Padding="0">
		<Grid.GestureRecognizers>
			<TapGestureRecognizer
				Command="{Binding ToggleCommand}"
                NumberOfTapsRequired="1" />
		</Grid.GestureRecognizers>
		<Ellipse
			Fill="{Binding BackgroundColor}"
			HorizontalOptions="Center" VerticalOptions="Center"
			Aspect="UniformToFill"/>
		<Label 
	        Text="{Binding Date.Day}"
			FontSize="32" TextColor="LightGray"
			HorizontalOptions="Center" VerticalOptions="Center"/>
		<Ellipse
			Fill="#2BFF8C"
			WidthRequest="12" HeightRequest="12"
			HorizontalOptions="End"  VerticalOptions="Start"
			IsVisible="{Binding IsToday}"/>
	</Grid>
</ContentView>
