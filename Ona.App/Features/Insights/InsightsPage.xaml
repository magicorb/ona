<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ona.App.Features.Insights.InsightsPage"
             Title="InsightsPage"
			 Loaded="ContentPage_Loaded">
	<VerticalStackLayout
		Padding="16,0">
		<Label
			Text="Insights"
			FontSize="54"
			Margin="0,12,0,0"/>

		<Label Text="Last period started" FontSize="18" Margin="0,64,0,0"/>
		
		<BoxView VerticalOptions="FillAndExpand" HeightRequest="2" Color="#0D1218" Margin="0,12,0,0"/>

		<Label Text="{Binding LastPeriodStart, TargetNullValue='No data'}" FontSize="32" Margin="0,12,0,0"/>

		<Label Text="Average cycle length" FontSize="18" Margin="0,48,0,0"/>

		<BoxView VerticalOptions="FillAndExpand" HeightRequest="2" Color="#0D1218" Margin="0,12,0,0"/>

		<Label Text="{Binding AverageCycleLength, TargetNullValue='No data'}" FontSize="32" Margin="0,12,0,0"/>

		<Label Text="Average period length" FontSize="18" Margin="0,48,0,0"/>

		<BoxView VerticalOptions="FillAndExpand" HeightRequest="2" Color="#0D1218" Margin="0,12,0,0"/>

		<Label Text="{Binding AveragePeriodLength, TargetNullValue='No data'}" FontSize="32" Margin="0,12,0,0"/>
	</VerticalStackLayout>
</ContentPage>