<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Ona.App.Features.Settings.SettingsPage"
	Title="SettingsPage"
	Loaded="ContentPage_Loaded">
	<ContentPage.Resources>
		<Style TargetType="Label" x:Key="FieldNameStyle">
			<Setter Property="FontSize" Value="18"/>
		</Style>

		<Style TargetType="Label" x:Key="FieldValueStyle">
			<Setter Property="FontSize" Value="32"/>
		</Style>
	</ContentPage.Resources>
	
	<VerticalStackLayout
		Padding="16,0">
		<Label
			Text="Settings"
			FontSize="54"
			Margin="0,12,0,0"/>

		<BoxView  Style="{StaticResource HorizontalSeparatorStyle}" Margin="0,64,0,0"/>

		<Label
			Text="Delete dataâ†’" Style="{StaticResource FieldValueStyle}" Margin="0,12,0,0">
			<Label.GestureRecognizers>
				<TapGestureRecognizer Command="{Binding DeleteDataCommand}"/>
			</Label.GestureRecognizers>
		</Label>

		<Label Text="App Version" Style="{StaticResource FieldNameStyle}" Margin="0,48,0,0"/>

		<BoxView Style="{StaticResource HorizontalSeparatorStyle}" Margin="0,12,0,0"/>

		<Label Text="{Binding VersionNumber, TargetNullValue='No data'}" Style="{StaticResource FieldValueStyle}" Margin="0,12,0,0"/>

	</VerticalStackLayout>
</ContentPage>