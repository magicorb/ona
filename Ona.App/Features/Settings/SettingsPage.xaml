<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Ona.App.Features.Settings.SettingsPage"
	Title="SettingsPage"
	Loaded="ContentPage_Loaded">
	<ContentPage.Resources>
		<Style TargetType="Label" x:Key="FieldNameStyle">
			<Setter Property="FontSize" Value="18"/>
		</Style>

		<Style TargetType="Label" x:Key="FieldValueStyle">
			<Setter Property="FontSize" Value="32"/>
		</Style>
	</ContentPage.Resources>

	<Grid Padding="16,12">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<VerticalStackLayout Grid.Row="0">
			<Label Text="Settings" FontSize="54"/>

			<BoxView Style="{StaticResource HorizontalSeparatorStyle}" Margin="0,64,0,0"/>

			<Label Text="Delete dataâ†’" Style="{StaticResource FieldValueStyle}" Margin="0,12,0,0">
				<Label.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding DeleteDataCommand}"/>
				</Label.GestureRecognizers>
			</Label>
		</VerticalStackLayout>
		<HorizontalStackLayout Grid.Row="1" HorizontalOptions="Center" VerticalOptions="End">
			<Label Text="App Version" />
			<Label Text="{Binding VersionNumber, TargetNullValue='No data'}" Margin="4,0,0,0" />
		</HorizontalStackLayout>
	</Grid>
</ContentPage>