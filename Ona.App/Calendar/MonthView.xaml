<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:calendar="clr-namespace:Ona.App.Calendar"
             x:Class="Ona.App.Calendar.MonthView">
    <VerticalStackLayout>
        <Label 
            Text="{Binding MonthName}"
            HorizontalOptions="Start" HeightRequest="24"
			FontSize="Subtitle"/>

		<CollectionView
			ItemsSource="{Binding DaysOfWeek}"
			Margin="0,12,0,0">
			<CollectionView.ItemsLayout>
				<GridItemsLayout
					Orientation="Vertical"
                    Span="7" />
			</CollectionView.ItemsLayout>
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Label
						Text="{Binding}" HorizontalOptions="Center"
						TextColor="Gray" FontSize="Small" HeightRequest="24"/>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
		
		<CollectionView
			ItemsSource="{Binding Dates}">
			<CollectionView.ItemsLayout>
				<GridItemsLayout
					Orientation="Vertical"
                    Span="7" />
			</CollectionView.ItemsLayout>
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<calendar:DateView
						IsVisible="{Binding IsCurrentMonth}" />
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</VerticalStackLayout>
</ContentView>
