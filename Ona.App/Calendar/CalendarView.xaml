<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:calendar="clr-namespace:Ona.App.Calendar"
             x:Class="Ona.App.Calendar.CalendarView">
	<CollectionView
		x:Name="MonthCollectionView"
		ItemsSource="{Binding Months}"
		SelectionMode="None" Scrolled="CollectionView_Scrolled">
		<CollectionView.ItemTemplate>
			<DataTemplate>
				<calendar:MonthView
					Margin="0,0,0,12"
					IsVisible="{Binding IsVisible}"/>
			</DataTemplate>
		</CollectionView.ItemTemplate>
	</CollectionView>
</ContentView>
