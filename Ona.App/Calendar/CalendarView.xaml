<?xml version="1.0" encoding="utf-8" ?>
<ContentView
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Ona.App.Controls"
	xmlns:calendar="clr-namespace:Ona.App.Calendar"
    x:Class="Ona.App.Calendar.CalendarView"
	Loaded="ContentView_Loaded" Unloaded="ContentView_Unloaded">
	<controls:ListViewLite
		x:Name="MonthListViewLite"
		ItemsSource="{Binding Months}"
		Scrolled="ListViewLite_Scrolled">
		<controls:ListViewLite.ItemTemplate>
			<DataTemplate>
				<calendar:MonthView
					Margin="0,0,0,12"/>
			</DataTemplate>
		</controls:ListViewLite.ItemTemplate>
	</controls:ListViewLite>
</ContentView>
