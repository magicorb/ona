<?xml version="1.0" encoding="utf-8" ?>
<ContentView
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Ona.App.Controls"
	x:Class="Ona.App.Controls.ListViewLite">
	<ScrollView
		x:Name="ItemsScrollView"
		Scrolled="ItemsScrollView_Scrolled"
		HorizontalScrollBarVisibility="{Binding Source={RelativeSource Mode=FindAncestor, AncestorType={x:Type controls:ListViewLite}}, Path=HorizontalScrollBarVisibility}"
		VerticalScrollBarVisibility="{Binding Source={RelativeSource Mode=FindAncestor, AncestorType={x:Type controls:ListViewLite}}, Path=VerticalScrollBarVisibility}">
		<VerticalStackLayout x:Name="ItemsPanel"/>
	</ScrollView>
</ContentView>
