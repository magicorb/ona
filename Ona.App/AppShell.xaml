<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Ona.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Ona.App"
    xmlns:today="clr-namespace:Ona.App.Features.Today"
    xmlns:insights="clr-namespace:Ona.App.Features.Insights"
    xmlns:settings="clr-namespace:Ona.App.Features.Settings"
    Shell.FlyoutBehavior="Disabled"
	Shell.NavBarIsVisible="false"
    Title="Ona.App">
	<TabBar>
		<ShellContent
			Title="Settings" Icon="settings.png"
			ContentTemplate="{DataTemplate settings:SettingsPage}"/>
		
		<ShellContent
			Title="Today" Icon="today.png"
			ContentTemplate="{DataTemplate today:TodayPage}"/>

		<ShellContent
			Title="Insights" Icon="insights.png"
			ContentTemplate="{DataTemplate insights:InsightsPage}"/>
	</TabBar>
</Shell>
